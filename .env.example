# Development environment variables
# Copy to .env and fill in your values

# Security (required in production)
DJANGO_SECRET_KEY=your-super-secret-key-here-make-it-long-and-random
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database (production - leave empty for SQLite in development)
# RDS_HOSTNAME=your-rds-endpoint.eu-west-1.rds.amazonaws.com
# RDS_DB_NAME=p4td
# RDS_USERNAME=postgres
# RDS_PASSWORD=your-db-password
# RDS_PORT=5432

# AWS S3 (production - leave empty for local file storage in development)
# AWS_STORAGE_BUCKET_NAME=p4td-media-bucket
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_REGION_NAME=eu-west-1

# CORS (production - comma-separated list of allowed origins)
# CORS_ALLOWED_ORIGINS=https://your-app.com

# Email (production - configure for password reset emails)
# For Gmail: use an App Password (https://myaccount.google.com/apppasswords)
# DJANGO_EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@paws4thoughtdogs.co.uk
